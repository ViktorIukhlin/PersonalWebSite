---
import { profile } from '../data/profile';
---

<section id="experience" class="section">
  <div class="container">
    <h2 class="section-title">Work Experience</h2>

    <div class="timeline">
      {profile.experience.map((job) => (
        <div class="timeline-item">
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="job-header">
              <h3 class="job-role">{job.role.toUpperCase()}</h3>
              <span class="job-period">{job.period}</span>
            </div>
            <p class="job-company">{job.company}</p>

            <ul class="job-highlights">
              {job.highlights.map((highlight) => (
                <li>â€” {highlight}</li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section {
    padding: 5rem 0;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 6px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 3rem;
  }

  .timeline-dot {
    position: absolute;
    left: -2rem;
    top: 0.35rem;
    width: 14px;
    height: 14px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .job-role {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .job-period {
    color: var(--color-text);
    font-size: 1.1rem;
  }

  .job-company {
    color: var(--color-accent);
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }

  .job-highlights {
    max-width: 600px;
  }

  .job-highlights li {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 1rem;
    line-height: 1.7;
  }
</style>
