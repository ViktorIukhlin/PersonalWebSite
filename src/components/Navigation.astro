---
interface Props {
  items: { id: string; label: string; icon?: string }[];
}

const { items } = Astro.props;

const icons: Record<string, string> = {
  home: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>`,
  summary: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="5"/><path d="M20 21a8 8 0 1 0-16 0"/></svg>`,
  experience: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>`,
  skills: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>`,
  links: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>`,
};
---

<nav class="fixed-nav" id="main-nav">
  <div class="nav-indicator" id="nav-indicator"></div>
  {items.map((item) => (
    <a href={`#${item.id}`} class="nav-item" data-section={item.id}>
      <span class="nav-icon" set:html={icons[item.id] || icons.home} />
      <span class="nav-label">{item.label}</span>
    </a>
  ))}
</nav>

<style>
  .fixed-nav {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.25rem;
    background: rgba(30, 30, 30, 0.8);
    padding: 0.5rem;
    border-radius: 50px;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 1000;
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  .nav-indicator {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    height: calc(100% - 1rem);
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    z-index: 0;
  }

  :global([data-theme="light"]) .nav-indicator {
    background: rgba(0, 0, 0, 0.1);
  }

  :global([data-theme="light"]) .fixed-nav {
    background: rgba(255, 255, 255, 0.8);
    border-color: rgba(0, 0, 0, 0.1);
  }

  .nav-item {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-item:hover {
    color: var(--color-text);
  }

  .nav-item.active {
    color: var(--color-accent);
  }

  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
  }

  .nav-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .nav-label {
    display: block;
  }

  @media (max-width: 768px) {
    .fixed-nav {
      bottom: 1rem;
      padding: 0.375rem;
      gap: 0.125rem;
    }

    .nav-indicator {
      top: 0.375rem;
      left: 0.375rem;
      height: calc(100% - 0.75rem);
    }

    .nav-item {
      padding: 0.625rem;
    }

    .nav-label {
      display: none;
    }
  }
</style>

<script>
  function initNavigation() {
    const nav = document.getElementById('main-nav');
    const indicator = document.getElementById('nav-indicator');
    const navItems = document.querySelectorAll('.nav-item') as NodeListOf<HTMLElement>;
    const sections = document.querySelectorAll('section[id]');

    function moveIndicator(activeItem: HTMLElement) {
      if (!indicator || !nav) return;
      const navRect = nav.getBoundingClientRect();
      const itemRect = activeItem.getBoundingClientRect();
      const isMobile = window.innerWidth <= 768;
      const padding = isMobile ? 6 : 8; // 0.375rem or 0.5rem
      const offsetLeft = itemRect.left - navRect.left - padding;
      indicator.style.width = `${itemRect.width}px`;
      indicator.style.transform = `translateX(${offsetLeft}px)`;
    }

    function setActiveNav() {
      const scrollPosition = window.scrollY + window.innerHeight / 3;
      const documentHeight = document.documentElement.scrollHeight;
      const windowHeight = window.innerHeight;
      const isAtBottom = window.scrollY + windowHeight >= documentHeight - 50;

      // If at bottom of page, activate the last nav item (Links)
      if (isAtBottom) {
        navItems.forEach((item) => item.classList.remove('active'));
        const lastItem = navItems[navItems.length - 1];
        lastItem.classList.add('active');
        moveIndicator(lastItem);
        return;
      }

      sections.forEach((section) => {
        const sectionTop = (section as HTMLElement).offsetTop;
        const sectionHeight = (section as HTMLElement).offsetHeight;
        const sectionId = section.getAttribute('id');

        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          navItems.forEach((item) => {
            item.classList.remove('active');
            if (item.getAttribute('data-section') === sectionId) {
              item.classList.add('active');
              moveIndicator(item);
            }
          });
        }
      });
    }

    // Initialize indicator position
    const initialActive = document.querySelector('.nav-item.active') as HTMLElement || navItems[0];
    if (initialActive) {
      initialActive.classList.add('active');
      moveIndicator(initialActive);
    }

    window.addEventListener('scroll', setActiveNav, { passive: true });
    window.addEventListener('resize', () => {
      const active = document.querySelector('.nav-item.active') as HTMLElement;
      if (active) moveIndicator(active);
    });
    setActiveNav();
  }

  document.addEventListener('DOMContentLoaded', initNavigation);
  document.addEventListener('astro:page-load', initNavigation);
</script>
