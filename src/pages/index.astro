---
import Layout from '../layouts/Layout.astro';
import { profile } from '../data/profile';

const navItems = [
  { id: 'home', label: 'Home' },
  { id: 'summary', label: 'Summary' },
  { id: 'experience', label: 'Experience' },
  { id: 'skills', label: 'Skills' },
  { id: 'links', label: 'Links' },
];
---

<Layout title={profile.name}>
  <!-- Hero Section -->
  <section id="home" class="hero">
    <div class="hero-content">
      <div class="hero-badge">
        <span class="badge-dot"></span>
        <span>Open to work</span>
      </div>

      <a href={`${import.meta.env.BASE_URL}Viktor_Iukhlin_CV.pdf`} class="btn-download" download>
        Download CV
      </a>

      <div class="hero-info">
        <p class="hero-role">{profile.title.toUpperCase()}</p>
        <h1 class="hero-name">{profile.name}</h1>

        <div class="hero-contacts">
          <a href={`mailto:${profile.email}`} class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            <span>{profile.email}</span>
          </a>
          <a href={`tel:${profile.phone}`} class="contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>{profile.phone}</span>
          </a>
          <a href={profile.linkedin} target="_blank" rel="noopener" class="contact-item">
            <svg viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span>LinkedIn</span>
          </a>
          <a class="contact-item location">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{profile.location}</span>
          </a>
        </div>
      </div>

      <nav class="hero-nav">
        {navItems.map((item) => (
          <a href={`#${item.id}`} class={item.id === 'home' ? 'active' : ''}>
            {item.label}
          </a>
        ))}
      </nav>
    </div>

    <div class="hero-image">
      <div class="hero-image-placeholder">
        <!-- Photo will be added here -->
        <span>Photo</span>
      </div>
    </div>
  </section>

  <!-- Summary Section -->
  <section id="summary" class="section">
    <div class="container">
      <h2 class="section-title">Summary</h2>

      <div class="summary-content">
        <p>{profile.summary}</p>

        <p>
          I have collaborated with diverse teams, including developers, designers, and product managers,
          to bring complex projects to life. My approach centers on writing clean, maintainable code
          while ensuring optimal performance and user experience.
        </p>

        <blockquote>
          Driven by a curiosity to learn and improve, I continuously explore new tools and
          methodologies to enhance my work. Whether working on web applications, mobile interfaces,
          or complex integrations, I am committed to delivering high-quality results that make a
          difference for users and businesses alike.
        </blockquote>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section id="experience" class="section">
    <div class="container">
      <h2 class="section-title">Work Experience</h2>

      <div class="timeline">
        {profile.experience.map((job) => (
          <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <div class="job-header">
                <h3 class="job-role">{job.role.toUpperCase()}</h3>
                <span class="job-period">{job.period}</span>
              </div>
              <p class="job-company">{job.company}</p>

              <ul class="job-highlights">
                {job.highlights.map((highlight) => (
                  <li>— {highlight}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="section">
    <div class="container">
      <h2 class="section-title">Skills & Tools</h2>

      <div class="skills-grid">
        <div class="skills-column">
          <div class="skill-category">
            <h4>Main Technologies</h4>
            <ul class="skill-list">
              {profile.skills.main.slice(0, 6).map((skill) => (
                <li><span class="skill-dot"></span>{skill}</li>
              ))}
            </ul>
          </div>

          <div class="skill-category">
            <h4>Testing</h4>
            <ul class="skill-list">
              {profile.skills.testing.map((skill) => (
                <li><span class="skill-dot"></span>{skill}</li>
              ))}
            </ul>
          </div>
        </div>

        <div class="skills-column">
          <div class="skill-category">
            <h4>Cross-Platform</h4>
            <ul class="skill-list">
              {profile.skills.crossPlatform.slice(0, 4).map((skill) => (
                <li><span class="skill-dot"></span>{skill}</li>
              ))}
            </ul>
          </div>

          <div class="skill-category">
            <h4>Libraries & Frameworks</h4>
            <ul class="skill-list">
              {profile.skills.libraries.slice(0, 4).map((skill) => (
                <li><span class="skill-dot"></span>{skill}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>

      <div class="languages-section">
        <h3>LANGUAGES</h3>
        <div class="languages-list">
          {profile.languages.map((lang) => (
            <div class="language-item">
              <span class="language-name">{lang}</span>
              <div class="language-bar">
                <div class="language-progress"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Education Section -->
  <section id="education" class="section">
    <div class="container">
      <h2 class="section-title">Education</h2>

      <div class="education-item">
        <span class="edu-dot"></span>
        <div class="edu-content">
          <h4>{profile.education.university}</h4>
          <p class="edu-degree">{profile.education.degree} — {profile.education.period}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Links Section -->
  <section id="links" class="section">
    <div class="container">
      <h2 class="section-title">Links</h2>

      <div class="social-links">
        <a href={profile.github} target="_blank" rel="noopener" class="social-icon" title="GitHub">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <a href={profile.linkedin} target="_blank" rel="noopener" class="social-icon" title="LinkedIn">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href={profile.telegram} target="_blank" rel="noopener" class="social-icon" title="Telegram">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
          </svg>
        </a>
        <a href={profile.instagram} target="_blank" rel="noopener" class="social-icon" title="Instagram">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
        <a href={profile.facebook} target="_blank" rel="noopener" class="social-icon" title="Facebook">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      </div>

      <div class="contact-footer">
        <a href={`mailto:${profile.email}`} class="contact-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="4" width="20" height="16" rx="2"/>
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
          </svg>
          <span>{profile.email}</span>
        </a>
        <a href={`tel:${profile.phone}`} class="contact-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          <span>{profile.phone}</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <p>&copy; {new Date().getFullYear()} {profile.name}</p>
    </div>
  </footer>
</Layout>

<style>
  /* Hero Section */
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    padding: 2rem 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    position: absolute;
    top: 2rem;
    left: 3rem;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .btn-download {
    position: absolute;
    top: 2rem;
    right: 3rem;
    background: var(--color-accent);
    color: #000;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: background 0.2s, transform 0.2s;
  }

  .btn-download:hover {
    background: var(--color-accent-hover);
    color: #000;
    transform: translateY(-2px);
  }

  .hero-info {
    margin-top: 4rem;
  }

  .hero-role {
    color: var(--color-accent);
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .hero-name {
    font-size: 4rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 2rem;
  }

  .hero-contacts {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .contact-item:hover {
    color: var(--color-accent);
  }

  .contact-item.location {
    cursor: default;
  }

  .contact-item.location:hover {
    color: var(--color-text-muted);
  }

  .contact-item svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .hero-nav {
    position: absolute;
    bottom: 2rem;
    left: 3rem;
    display: flex;
    gap: 0.5rem;
    background: rgba(30, 30, 30, 0.9);
    padding: 0.5rem;
    border-radius: 50px;
    backdrop-filter: blur(10px);
  }

  .hero-nav a {
    padding: 0.75rem 1.25rem;
    border-radius: 50px;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    transition: all 0.2s;
  }

  .hero-nav a:hover,
  .hero-nav a.active {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
  }

  .hero-image {
    position: relative;
    background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 50%, #d4a84b22 100%);
  }

  .hero-image::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 70% 50%, rgba(212, 168, 75, 0.3) 0%, transparent 60%);
  }

  .hero-image-placeholder {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: var(--color-text-muted);
  }

  /* Sections */
  .section {
    padding: 5rem 0;
  }

  /* Summary */
  .summary-content {
    max-width: 600px;
  }

  .summary-content p {
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.8;
  }

  .summary-content blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: 1.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.4;
    color: var(--color-text);
    margin-top: 2rem;
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 5px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-border);
  }

  .timeline-item {
    position: relative;
    padding-bottom: 3rem;
  }

  .timeline-dot {
    position: absolute;
    left: -2rem;
    top: 0.25rem;
    width: 12px;
    height: 12px;
    background: var(--color-accent);
    border-radius: 50%;
    transform: translateX(-3px);
  }

  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 0.25rem;
  }

  .job-role {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .job-period {
    color: var(--color-accent);
    font-size: 0.9rem;
  }

  .job-company {
    color: var(--color-accent);
    margin-bottom: 1rem;
  }

  .job-highlights {
    max-width: 500px;
  }

  .job-highlights li {
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  /* Skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .skill-category {
    margin-bottom: 2rem;
  }

  .skill-category h4 {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .skill-dot {
    width: 8px;
    height: 8px;
    background: var(--color-accent);
    border-radius: 50%;
  }

  .languages-section h3 {
    color: var(--color-accent);
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .languages-list {
    max-width: 400px;
  }

  .language-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .language-name {
    min-width: 80px;
  }

  .language-bar {
    flex: 1;
    height: 4px;
    background: var(--color-border);
    border-radius: 2px;
  }

  .language-progress {
    height: 100%;
    width: 90%;
    background: var(--color-accent);
    border-radius: 2px;
  }

  /* Education */
  .education-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .edu-dot {
    width: 12px;
    height: 12px;
    background: var(--color-accent);
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .edu-content h4 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .edu-degree {
    color: var(--color-accent);
  }

  /* Links */
  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .social-icon {
    width: 48px;
    height: 48px;
